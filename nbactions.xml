        <action>
            <actionName>integration-test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>integration-test</goal>
            </goals>
            <properties>
                <test>DummyToSkipUnitTests</test>
                <failIfNoTests>false</failIfNoTests>
